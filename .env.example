# Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=production

# Server Port (Nestify will override this with auto-assigned port)
PORT=3000

# Data Directory (persistent storage on Nestify)
DATA_DIR=/data

# API Configuration
API_BASE_URL=/api
API_VERSION=v1

# CORS Settings
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
# Generate a strong random string for production
SESSION_SECRET=your-secret-key-here-change-in-production

# Feature Flags
ENABLE_CRON_JOBS=true
ENABLE_STATIC_FILES=true

# Database (if needed)
# DATABASE_URL=
# DATABASE_NAME=

# External API Keys (add your own)
# EXTERNAL_API_KEY=
# EXTERNAL_API_SECRET=

# Email/Notification Settings (if needed)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=
